<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="CoffeeShopApplication.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CoffeeShopApplication">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <Style ApplyToDerivedTypes="True" TargetType="Shell">
                        <Setter Property="Shell.BackgroundColor" Value="White" />
                        <Setter Property="Shell.ForegroundColor" Value="Black" />
                        <Setter Property="Shell.TitleColor" Value="Black" />
                        <Setter Property="Shell.NavBarHasShadow" Value="False" />
                    </Style>
                    <Style x:Key="SettingsButtonStyle" TargetType="Button">
                        <Setter Property="BackgroundColor" Value="#F9F9F9" />
                        <Setter Property="TextColor" Value="Black" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="CornerRadius" Value="15" />
                        <Setter Property="HeightRequest" Value="50" />
                        <Setter Property="HorizontalOptions" Value="Fill" />
                        <Setter Property="Padding" Value="15,0" />
                        <Setter Property="ContentLayout" Value="Left,0" />
                    </Style>
                    <Style x:Key="SettingsRowStyle" TargetType="Grid">
                        <Setter Property="BackgroundColor" Value="#F9F9F9" />
                        <Setter Property="HeightRequest" Value="50" />
                        <Setter Property="HorizontalOptions" Value="Fill" />
                        <Setter Property="Padding" Value="15,0" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="ColumnDefinitions">
                            <Setter.Value>
                                <ColumnDefinitionCollection>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </ColumnDefinitionCollection>
                            </Setter.Value>
                        </Setter>
                    </Style>


                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
