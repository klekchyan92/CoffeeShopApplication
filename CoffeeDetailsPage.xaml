<ContentPage
    x:Class="CoffeeShopApplication.CoffeeDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{Binding CoffeeBackgroundColor}">

    <!--  Main Layout  -->
    <Grid RowDefinitions="Auto,*,Auto">

        <!--  Top Section: Coffee Info + QR Code  -->
        <StackLayout Padding="15,20">
            <!--  Coffee Name and Address  -->
            <StackLayout Orientation="Horizontal" Spacing="15">
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="PREPA"
                    TextColor="Black"
                    VerticalOptions="Center" />

                <Label
                    FontSize="16"
                    Text="21 Tumanyan St"
                    TextColor="Gray"
                    VerticalOptions="Center" />

                <Image
                    HeightRequest="25"
                    Source="phone_icon.png"
                    VerticalOptions="Center"
                    WidthRequest="25" />
            </StackLayout>

            <!--  Points and QR Code  -->
            <StackLayout
                Padding="0,20"
                Orientation="Horizontal"
                Spacing="15">
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="414"
                    TextColor="#F4A825" />

                <Label
                    FontSize="14"
                    Text="Points Available"
                    TextColor="Gray" />

                <Image
                    HeightRequest="50"
                    Source="qr_code.png"
                    WidthRequest="50" />
            </StackLayout>

            <!--  Search Bar  -->
            <SearchBar
                BackgroundColor="#F4F4F4"
                HeightRequest="40"
                HorizontalOptions="Fill"
                Placeholder="Search..." />
        </StackLayout>

        <!--  Coffee Menu Section  -->
        <ScrollView Grid.Row="1" Padding="10">
            <VerticalStackLayout Spacing="10">
                <!--  Menu Header  -->
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <Button
                        BackgroundColor="#F4A825"
                        CornerRadius="25"
                        HeightRequest="40"
                        HorizontalOptions="Fill"
                        Text="Beverages"
                        TextColor="White" />
                    <Button
                        BackgroundColor="#F4A825"
                        CornerRadius="25"
                        HeightRequest="40"
                        HorizontalOptions="Fill"
                        Text="Bowls"
                        TextColor="White" />
                    <Button
                        BackgroundColor="#F4A825"
                        CornerRadius="25"
                        HeightRequest="40"
                        HorizontalOptions="Fill"
                        Text="Breakfast"
                        TextColor="White" />
                </StackLayout>

                <!--  Coffee Options (Repeatable)  -->
                <Frame
                    BackgroundColor="White"
                    CornerRadius="15"
                    HasShadow="True"
                    HorizontalOptions="Start"
                    WidthRequest="160">
                    <VerticalStackLayout Spacing="5">

                        <!--  ðŸ“· Image with size labels overlayed  -->
                        <Grid>
                            <Image
                                Aspect="AspectFill"
                                HeightRequest="120"
                                Source="cappucino.png"
                                WidthRequest="160" />

                            <!--  Sizes overlaid on bottom left  -->
                            <HorizontalStackLayout
                                Padding="10"
                                HorizontalOptions="Start"
                                Spacing="5"
                                VerticalOptions="End" />
                        </Grid>

                        <!--  ðŸ·ï¸ Coffee name + price + add button  -->
                        <Grid Padding="5,0" ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="Cappuccino" />
                                <Label
                                    FontSize="13"
                                    Text="2$"
                                    TextColor="Gray" />
                            </VerticalStackLayout>

                            <!--  âž• Button  -->
                            <Frame
                                Padding="0"
                                BackgroundColor="#CB8A58"
                                CornerRadius="12"
                                HeightRequest="24"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                WidthRequest="24">
                                <Label
                                    FontSize="18"
                                    HorizontalOptions="Center"
                                    Text="+"
                                    TextColor="White"
                                    VerticalOptions="Center" />
                            </Frame>
                        </Grid>

                    </VerticalStackLayout>
                </Frame>



                <!--  Repeat for other coffee items...  -->
            </VerticalStackLayout>
        </ScrollView>

        <!--  Bottom Navigation Bar  -->
        <Grid
            Grid.Row="2"
            Padding="10"
            ColumnDefinitions="*,*,*,*,*">
            <ImageButton Source="home_icon.png" />
            <ImageButton Grid.Column="1" Source="favourite_icon.png" />
            <ImageButton Grid.Column="2" Source="cart_icon.png" />
            <ImageButton Grid.Column="3" Source="profile_icon.png" />
        </Grid>

    </Grid>
</ContentPage>
