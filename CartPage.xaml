<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CoffeeShopApplication.CartPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <Grid Padding="20" RowDefinitions="Auto,*,Auto">

        <!--  Заголовок  -->
        <Label
            FontAttributes="Bold"
            FontSize="24"
            Text="Your Cart:"
            TextColor="Black" />

        <!--  Список товаров  -->
        <CollectionView
            x:Name="CartItemsCollectionView"
            Grid.Row="1"
            ItemsSource="{Binding CartItems}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="0,5"
                        Padding="10"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="1">
                        <Grid
                            Padding="5"
                            ColumnDefinitions="Auto,*,Auto"
                            RowDefinitions="Auto,Auto">

                            <!--  Фото товара  -->
                            <Image
                                Grid.RowSpan="2"
                                Margin="0,0,10,0"
                                Aspect="AspectFill"
                                HeightRequest="60"
                                Source="{Binding Image}"
                                WidthRequest="60" />

                            <!--  Название  -->
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="{Binding Name}"
                                TextColor="Black" />

                            <!--  Цена + Количество + Кнопки  -->
                            <HorizontalStackLayout
                                Grid.Row="1"
                                Grid.Column="1"
                                Spacing="8"
                                VerticalOptions="Center">
                                <Label
                                    FontSize="14"
                                    Text="{Binding Price, StringFormat='{0} AMD'}"
                                    TextColor="Gray"
                                    VerticalOptions="Center" />

                                <Button
                                    BackgroundColor="#E0E0E0"
                                    Clicked="OnDecreaseQuantityClicked"
                                    CornerRadius="15"
                                    FontSize="18"
                                    HeightRequest="30"
                                    Text="-"
                                    TextColor="Black"
                                    WidthRequest="30" />

                                <Label
                                    FontSize="14"
                                    Text="{Binding Quantity}"
                                    TextColor="Black"
                                    VerticalOptions="Center" />

                                <Button
                                    BackgroundColor="#CB8A58"
                                    Clicked="OnIncreaseQuantityClicked"
                                    CornerRadius="15"
                                    FontSize="18"
                                    HeightRequest="30"
                                    Text="+"
                                    TextColor="White"
                                    WidthRequest="30" />
                            </HorizontalStackLayout>

                            <!--  Кнопка удалить (справа)  -->
                            <ImageButton
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                BackgroundColor="Transparent"
                                Clicked="OnDeleteItemClicked"
                                HeightRequest="32"
                                HorizontalOptions="End"
                                Source="delete_icon.png"
                                VerticalOptions="Center"
                                WidthRequest="32" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--  Итого и кнопка  -->
        <VerticalStackLayout Grid.Row="2" Spacing="20">

            <!--  Total  -->
            <Label
                x:Name="TotalLabel"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Start"
                Text="Total: 0 AMD"
                TextColor="Black" />

            <!--  Кнопка Checkout  -->
            <Button
                Clicked="OnCheckoutClicked"
                CornerRadius="30"
                FontAttributes="Bold"
                HeightRequest="55"
                Text="Go to Checkout"
                TextColor="White">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0.0" Color="#CB8A58" />
                        <GradientStop Offset="1.0" Color="#562B1A" />
                    </LinearGradientBrush>
                </Button.Background>



                <Button.ImageSource>
                    <FontImageSource
                        Glyph="→"
                        Size="20"
                        Color="White" />
                </Button.ImageSource>
            </Button>

        </VerticalStackLayout>

    </Grid>
</ContentPage>
