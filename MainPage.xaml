<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CoffeeShopApplication.MainPage"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="White">

    <Grid>
        <!-- Фон сверху -->
        <Image Source="signin_top.png"
               Aspect="AspectFill"
               HorizontalOptions="Fill"
               VerticalOptions="Start"
               HeightRequest="250" />

        <!-- Фон снизу -->
        <Image Source="signin_bottom.png"
               Aspect="AspectFill"
               HorizontalOptions="Fill"
               VerticalOptions="End"
               HeightRequest="120" />

        <!-- Контент -->
        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
                <!-- Заголовки -->
                <StackLayout Spacing="5">
                    <Label Text="Welcome back!"
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"/>
                    <Label Text="Login to your account"
                           FontSize="18"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </StackLayout>

                <!-- Name -->
                <StackLayout>
                    <Label Text="Name" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#DDDDDD"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 25"
                            BackgroundColor="White"
                            Margin="0,5,0,0">
                        <Entry Placeholder="Enter your name"
                               BackgroundColor="Transparent"
                               TextColor="Black"
                               Margin="10,0"/>
                    </Border>
                </StackLayout>

                <!-- Phone -->
                <StackLayout>
                    <Label Text="Phone" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#DDDDDD"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 25"
                            BackgroundColor="White"
                            Margin="0,5,0,0">
                        <Entry Placeholder="Enter your phone"
                               Keyboard="Telephone"
                               BackgroundColor="Transparent"
                               TextColor="Black"
                               Margin="10,0"/>
                    </Border>
                </StackLayout>

                <!-- Кнопка Login -->
                <Button Text="Login"
                        Margin="0,30,0,0"
                        CornerRadius="25"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        TextColor="White"
                        Clicked="OnLoginClicked">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#CB8A58" Offset="0.0" />
                            <GradientStop Color="#562B1A" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <!-- Кнопка Register -->
                <Button Text="Register"
                        Margin="0,6,0,12"
                        CornerRadius="25"
                        HeightRequest="50"
                        BackgroundColor="Transparent"
                        BorderColor="#CB8A58"
                        BorderWidth="1"
                        TextColor="#CB8A58"
                        Clicked="OnRegisterClicked"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
