<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShopApplication.ProfilePage1"
             Title="Profile">
    <VerticalStackLayout BackgroundColor="White" Padding="30,0" Spacing="25">
        <!-- Profile Image -->
        <Frame CornerRadius="50" WidthRequest="100" HeightRequest="100" Padding="0" HasShadow="False"
               HorizontalOptions="Center">
            <Image Source="profile_image.png.jpg" WidthRequest="100" HeightRequest="100" Aspect="Fill" />
        </Frame>

        <!-- User Info -->
        <Label Text="Yeva Vardanyan" FontSize="22" FontAttributes="Bold" TextColor="Gray" HorizontalOptions="Center" />
        <Label Text="(+374)98 806 222" FontSize="14" TextColor="Gray" HorizontalOptions="Center" />

        <!-- Settings List -->
        <VerticalStackLayout Spacing="10">
            <Button Text="Edit Profile" HorizontalOptions="Start" Padding="10" BackgroundColor="Transparent"
                    BorderColor="#E0E0E0" BorderWidth="1" CornerRadius="30" />
            <Button Text="Bank Cards" HorizontalOptions="Start" Padding="10" BackgroundColor="Transparent"
                    BorderColor="#E0E0E0" BorderWidth="1" CornerRadius="30" />
            <Button Text="Order History" HorizontalOptions="Start" Padding="10" BackgroundColor="Transparent"
                    BorderColor="#E0E0E0" BorderWidth="1" CornerRadius="30" />
            
            <!-- Push Notifications Toggle -->
            <Frame CornerRadius="30" Padding="10" BorderColor="#E0E0E0" HasShadow="False">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Push Notifications" FontSize="16" />
                    <Switch IsToggled="True" Grid.Column="1" />
                </Grid>
            </Frame>
            
            <Button Text="Language" HorizontalOptions="Start" Padding="10" BackgroundColor="Transparent"
                    BorderColor="#E0E0E0" BorderWidth="1" CornerRadius="30" />
        </VerticalStackLayout>

        <!-- Logout Button -->
        <Label Text="Logout" FontSize="16" TextColor="Orange" HorizontalOptions="End" Padding="10" />
    </VerticalStackLayout>
</ContentPage>
