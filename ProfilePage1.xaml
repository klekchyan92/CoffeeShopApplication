<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CoffeeShopApplication.ProfilePage1"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Profile">
    <VerticalStackLayout
        Padding="30,0"
        BackgroundColor="White"
        Spacing="25">
        <!--  Profile Image  -->
        <Frame
            Padding="0"
            CornerRadius="50"
            HasShadow="False"
            HeightRequest="100"
            HorizontalOptions="Center"
            WidthRequest="100">
            <Image
                Aspect="Fill"
                HeightRequest="100"
                Source="profile_image.png.jpg"
                WidthRequest="100" />
        </Frame>

        <!--  User Info  -->
        <Label
            FontAttributes="Bold"
            FontSize="22"
            HorizontalOptions="Center"
            Text="Yeva Vardanyan"
            TextColor="Gray" />
        <Label
            FontSize="14"
            HorizontalOptions="Center"
            Text="(+374)98 806 222"
            TextColor="Gray" />

        <!--  Settings List  -->
        <VerticalStackLayout Spacing="10">
            <Button
                Padding="10"
                BackgroundColor="Transparent"
                BorderColor="#E0E0E0"
                BorderWidth="1"
                CornerRadius="30"
                HorizontalOptions="Start"
                Text="Edit Profile" />
            <Button
                Padding="10"
                BackgroundColor="Transparent"
                BorderColor="#E0E0E0"
                BorderWidth="1"
                CornerRadius="30"
                HorizontalOptions="Start"
                Text="Bank Cards" />
            <Button
                Padding="10"
                BackgroundColor="Transparent"
                BorderColor="#E0E0E0"
                BorderWidth="1"
                CornerRadius="30"
                HorizontalOptions="Start"
                Text="Order History" />

            <!--  Push Notifications Toggle  -->
            <Frame
                Padding="10"
                BorderColor="#E0E0E0"
                CornerRadius="30"
                HasShadow="False">
                <Grid ColumnDefinitions="*, Auto">
                    <Label FontSize="16" Text="Push Notifications" />
                    <Switch Grid.Column="1" IsToggled="True" />
                </Grid>
            </Frame>

            <Button
                Padding="10"
                BackgroundColor="Transparent"
                BorderColor="#E0E0E0"
                BorderWidth="1"
                CornerRadius="30"
                HorizontalOptions="Start"
                Text="Language" />
        </VerticalStackLayout>

        <!--  Logout Button  -->
        <Label
            Padding="10"
            FontSize="16"
            HorizontalOptions="End"
            Text="Logout"
            TextColor="Orange" />
    </VerticalStackLayout>
</ContentPage>
