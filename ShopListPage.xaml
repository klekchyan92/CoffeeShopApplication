<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShopApplication.ShopListPage"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- 🔍 Search Bar with location -->
        <StackLayout Orientation="Horizontal" Padding="15,20" Spacing="10">
            <SearchBar Placeholder="Search..." 
                       BackgroundColor="#F4F4F4"
                       CancelButtonColor="#CB8A58"
                       HeightRequest="40" />

            <ImageButton Source="location.png"
                         BackgroundColor="#CB8A58"
                         CornerRadius="50"
                         HeightRequest="50"
                         WidthRequest="50"
                         Padding="0"/>
        </StackLayout>

        <!-- 🏪 Coffee Shops List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="15" Spacing="15">

                <!-- Repeatable Shop Item -->
                <Frame CornerRadius="15" HasShadow="False" BackgroundColor="#F9F9F9" Padding="10">
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                        <Image Source="gotcha.png"
                               WidthRequest="50" HeightRequest="50"
                               Grid.RowSpan="2" />

                        <Label Text="Gotcha"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               Grid.Column="1" Grid.Row="0" />

                        <Image Source="arrow.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               Grid.Column="2" Grid.RowSpan="2"
                               VerticalOptions="Center" />

                        <StackLayout Orientation="Horizontal"
                                     Spacing="4"
                                     Grid.Column="1" Grid.Row="1">
                            <Image Source="star48.png" HeightRequest="44" WidthRequest="104" />
                        </StackLayout>
                    </Grid>
                </Frame>
                <Frame CornerRadius="15" HasShadow="False" BackgroundColor="#F9F9F9" Padding="10">
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                        <Image Source="coffehouse.png"
                               WidthRequest="50" HeightRequest="50"
                               Grid.RowSpan="2" />

                        <Label Text="Coffee House"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               Grid.Column="1" Grid.Row="0" />

                        <Image Source="arrow.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               Grid.Column="2" Grid.RowSpan="2"
                               VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnArrowTapped" />
                            </Image.GestureRecognizers>
                        </Image>

                        <StackLayout Orientation="Horizontal"
                                     Spacing="4"
                                     Grid.Column="1" Grid.Row="1">
                            <Image Source="star48.png" HeightRequest="44" WidthRequest="104" />
                        </StackLayout>
                    </Grid>
                </Frame>
                <Frame CornerRadius="15" HasShadow="False" BackgroundColor="#F9F9F9" Padding="10">
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                        <Image Source="cofix.png"
                               WidthRequest="50" HeightRequest="50"
                               Grid.RowSpan="2" />

                        <Label Text="Cofix"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               Grid.Column="1" Grid.Row="0" />

                        <Image Source="arrow.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               Grid.Column="2" Grid.RowSpan="2"
                               VerticalOptions="Center" />

                        <StackLayout Orientation="Horizontal"
                                     Spacing="4"
                                     Grid.Column="1" Grid.Row="1">
                            <Image Source="star48.png" HeightRequest="44" WidthRequest="104" />
                        </StackLayout>
                    </Grid>
                </Frame>
                <Frame CornerRadius="15" HasShadow="False" BackgroundColor="#F9F9F9" Padding="10">
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                        <Image Source="prepa.png"
                               WidthRequest="50" HeightRequest="50"
                               Grid.RowSpan="2" />

                        <Label Text="Prepa"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               Grid.Column="1" Grid.Row="0" />

                        <Image Source="arrow.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               Grid.Column="2" Grid.RowSpan="2"
                               VerticalOptions="Center" />

                        <StackLayout Orientation="Horizontal"
                                     Spacing="4"
                                     Grid.Column="1" Grid.Row="1">
                            <Image Source="star48.png" HeightRequest="44" WidthRequest="104" />
                        </StackLayout>
                    </Grid>
                </Frame>
                <Frame CornerRadius="15" HasShadow="False" BackgroundColor="#F9F9F9" Padding="10">
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                        <Image Source="music.png"
                               WidthRequest="50" HeightRequest="50"
                               Grid.RowSpan="2" />

                        <Label Text="Coffee Music"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               Grid.Column="1" Grid.Row="0" />

                        <Image Source="arrow.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               Grid.Column="2" Grid.RowSpan="2"
                               VerticalOptions="Center" />

                        <StackLayout Orientation="Horizontal"
                                     Spacing="4"
                                     Grid.Column="1" Grid.Row="1">
                            <Image Source="star48.png" HeightRequest="44" WidthRequest="104" />
                        </StackLayout>
                    </Grid>
                </Frame>
                <!-- Repeat this Frame for other shops... -->

            </VerticalStackLayout>
        </ScrollView>

        <!-- 🧭 Bottom Navigation -->
        <Grid Grid.Row="2" Padding="10" ColumnDefinitions="*,*,*,*,*">
            <ImageButton Source="home_icon.png" />
            <ImageButton Source="favourite_icon.png" Grid.Column="1" />
            <ImageButton Source="chat_icon_active.png" Grid.Column="2" />
            <ImageButton Source="cart_icon.png" Grid.Column="3" />
            <ImageButton Source="profile_icon.png" Grid.Column="4" />
        </Grid>
    </Grid>
</ContentPage>
